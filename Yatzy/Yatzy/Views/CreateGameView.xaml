<UserControl x:Class="Yatzy.Views.CreateGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"      
             xmlns:Views="clr-namespace:Yatzy.Views"
             xmlns:ViewModels="clr-namespace:Yatzy.ViewModels"  
             xmlns:Models="clr-namespace:Yatzy.Models"
             xmlns:local="clr-namespace:Yatzy.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type ViewModels:MainMenuViewModel}">
            <Views:MainMenuView Content="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type Models:DicesViewModel}">
            <Views:PlayGameView Content="{Binding}"/>
        </DataTemplate>

        <Style x:Key="MyButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" BorderBrush="Transparent" BorderThickness="0" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Back" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image Name="MouseOver" Source="/Resources/MouseOver.png"/>
                            <Image Name="NotMouseOver" Source="/Resources/NotMouseOver.png"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Image.IsMouseOver" Value="true">
                                <Setter TargetName="MouseOver" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="NotMouseOver" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="Image.IsMouseOver" Value="false">
                                <Setter TargetName="MouseOver" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="NotMouseOver" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>



    <Viewbox Stretch="UniformToFill">

        <Grid Margin="0" MaxHeight="1080" MinWidth="1920" >


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" Grid.RowSpan="7">
                <Image Source="/Resources/wood4.jpg" Opacity="1" Stretch="UniformToFill"/>
            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Style="{StaticResource Back}" Command="{Binding BackCommand}" MaxHeight="110" MaxWidth="110" MinHeight="80" MinWidth="80"/>
            </StackPanel>


            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Label Content="YATZY"  HorizontalAlignment="Center" FontSize="55" Foreground="DodgerBlue" />
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="2">

                <Label  Content="Skapa ny spelare" FontSize="30" Margin="0,215,0,0" HorizontalAlignment="Center" Foreground="AntiqueWhite"/>

            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1">
                <Label Content="Förnamn" HorizontalAlignment="Right" FontSize="26" Foreground="AntiqueWhite" Margin="0,290,20,0"/>
                <Label Content="Efternamn" HorizontalAlignment="Right" FontSize="26" Foreground="AntiqueWhite" Margin="0,0,20,0"/>
                <Label Content="Användarnamn" HorizontalAlignment="Right" FontSize="26" Foreground="AntiqueWhite" Margin="0,25,20,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="1">
                <TextBox Text="{Binding _Firstname, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="164" Height="30" HorizontalAlignment="Left" Margin="0,300,0,0" Background="#CCFFFFFF"/>
                <TextBox Text="{Binding _Lastname, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="164" Height="30" HorizontalAlignment="Left" Margin=" 0,16,0,0" Background="#CCFFFFFF"/>
                <TextBox Text="{Binding _Nickname, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Width="164" Height="30" HorizontalAlignment="Left" Margin=" 0,39,0,0" Background="#CCFFFFFF"/>
                <Button Style="{StaticResource MyButton}" Margin="0,10,10,0" Width="90" Height="40" FontSize="20" Command="{Binding AddNewPlayerCommand}">
                    <Label Content="Skapa" FontSize="30" Cursor="Hand" Background="#00DC8484" >
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite" />
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                        <Setter Property="Label.FontSize" Value="50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="1">
                <Label Content="Välj spelare" FontSize="30" Foreground="AntiqueWhite" HorizontalAlignment="Center" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding AvailablePlayers, IsAsync=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedItem="{Binding AvailablePlayer}" Background="#19FFFFFF" Foreground="AntiqueWhite" Width="410" Height="500" FontSize="20" BorderBrush="#00000000"/>
                <Button Style="{StaticResource MyButton}" Margin="0,20,0,0" Width="285" Height="40" FontSize="20" Command="{Binding AddPlayerCommand}">
                    <Label Content="Lägg till vald spelare" FontSize="30" Cursor="Hand" >
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite" />
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                        <Setter Property="Label.FontSize" Value="50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Button>

            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" Grid.RowSpan="1">
                <Label Content="Valda spelare" FontSize="30" Foreground="AntiqueWhite" HorizontalAlignment="Center" FontWeight="Bold"/>
                <!--Label Content="{Binding SelectedPlayers[0].Nickname}" FontSize="26" Foreground="AntiqueWhite" HorizontalAlignment="Center" Margin="0,30,0,0"/>
                <Label Content="{Binding SelectedPlayers[1].Nickname}" FontSize="26" Foreground="AntiqueWhite" HorizontalAlignment="Center"/>
                <Label Content="{Binding SelectedPlayers[2].Nickname}" FontSize="26" Foreground="AntiqueWhite" HorizontalAlignment="Center"/>
                <Label Content="{Binding SelectedPlayers[3].Nickname}" FontSize="26" Foreground="AntiqueWhite" HorizontalAlignment="Center"/-->
                <ListBox ItemsSource="{Binding SelectedPlayers, IsAsync=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedItem="{Binding SelectedPlayer}" HorizontalAlignment="Center" Background="#19FFFFFF" Foreground="AntiqueWhite" Width="410" Height="500" FontSize="26" BorderBrush="#00000000"/>
                <Button Style="{StaticResource MyButton}" Margin="0,20,0,0" Width="270" Height="40" FontSize="20" Command="{Binding RemovePlayerCommand}">
                    <Label Content="Ta bort vald spelare" FontSize="30" Cursor="Hand">
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite" />
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                        <Setter Property="Label.FontSize" Value="50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Button>


            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="4"  Grid.RowSpan="1">
                <Label Content="Välj Speltyp" FontSize="30" Foreground="AntiqueWhite" HorizontalAlignment="Right" Margin="0,0,30,0" FontWeight="Bold" />
                <Button Style="{StaticResource MyButton}" Command="{Binding ClassicGameCommand}" Margin="0,70,30,10" CommandParameter="4" HorizontalAlignment="Right">
                    <Label Content="Klassisk Yatzy" FontSize="45" Cursor="Hand" >
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite" />
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                        <Setter Property="Label.FontSize" Value="50"/>
                                    </Trigger>
                                    <Trigger Property="Label.IsEnabled" Value="false">
                                        <Setter Property="Label.Foreground" Value="Gold"/>
                                    </Trigger>


                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Button>

                <Button Style="{StaticResource MyButton}" Command="{Binding StyrdGameCommand}" CommandParameter="5" Margin="0,0,30,0" HorizontalAlignment="Right">
                    <Label  Content="Styrd Yatzy" FontSize="45" Cursor="Hand" >
                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite"/>
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                        <Setter Property="Label.FontSize" Value="50"/>
                                    </Trigger>
                                    <Trigger Property="Label.IsEnabled" Value="false">
                                        <Setter Property="Label.Foreground" Value="Gold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>

                </Button>

                <Button Style="{StaticResource MyButton}" Command="{Binding StartGameCommand}" Margin="0,400,30,0" HorizontalAlignment="Right">
                    <Label  Content="Starta Spelet" FontSize="45" Cursor="Hand">

                        <Label.Style>
                            <Style>
                                <Setter Property="Label.Foreground" Value="AntiqueWhite"/>
                                <Style.Triggers>
                                    <Trigger Property="Label.IsMouseOver" Value="true">
                                        <Setter Property="Label.Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Button>


            </StackPanel>

            <ContentControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" Grid.RowSpan="7" Content="{Binding SelectedViewModel}"/>
        </Grid>
    </Viewbox>

</UserControl>
