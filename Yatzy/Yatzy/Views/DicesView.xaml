<Window x:Class="Yatzy.Views.DicesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatzy.Views"
        mc:Ignorable="d"
        Title="DicesView" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Command="{Binding SaveDiceCommand}" CommandParameter="1" Content="{Binding Path = DiceValue[1]}" HorizontalAlignment="Left" Margin="119,263,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Command="{Binding SaveDiceCommand}" CommandParameter="2" Content="Button" HorizontalAlignment="Left" Margin="199,263,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1_Copy" Command="{Binding SaveDiceCommand}" CommandParameter="3" Content="Button" HorizontalAlignment="Left" Margin="279,263,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1_Copy1" Command="{Binding SaveDiceCommand}" CommandParameter="4" Content="Button" HorizontalAlignment="Left" Margin="359,263,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1_Copy2" Command="{Binding SaveDiceCommand}" CommandParameter="5" Content="Button" HorizontalAlignment="Left" Margin="439,263,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnThrow" Command="{Binding RollDicesCommand}" Content="Kasta" HorizontalAlignment="Left" Margin="248,348,0,0" VerticalAlignment="Top" Width="75"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="157" Margin="176,52,0,0" VerticalAlignment="Top" Width="303" ItemsSource="{Binding Dices}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="60" Header="Nummer" DisplayMemberBinding="{Binding DiceValue}"/>
                    <GridViewColumn Width="60" Header="Sparad" DisplayMemberBinding="{Binding IsDiceEnabled}"/>
                    <GridViewColumn Width="60" Header="ID" DisplayMemberBinding="{Binding DiceID}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
